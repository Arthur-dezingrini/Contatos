@model IEnumerable<IndexModel>
@Html.Partial("Adicionar")
@Html.Partial("Excluir")


<div class="container">
    <main role="main" class="pb-3">
        <div class="d-flex justify-content-between border-bottom pb-2">
            <h1 class="text-primary">Lista de Contatos</h1>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
                Adicionar
            </button>
        </div>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover mt-4">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Cidade/Estado</th>
                        <th>Email</th>
                        <th>Categoria</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contato in Model)
                    {
                        <tr>
                            <td>@contato.Name</td>
                            <td>@contato.Telefone</td>
                            <td>@contato.Municipio/@contato.Estado</td>
                            <td>@contato.Email</td>
                            <td>@contato.Categoria</td>
                            <td>
                                <a class="btn btn-warning p-2 beditar-contato" asp-controller="Home" asp-action="Editar" asp-route-id="@contato.Id">Editar</a>
                                <a class="btn btn-danger p-2 remover-contato" data-bs-toggle="modal" data-bs-target="#excluirModal" data-id="@contato.Id">Remover</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="d-flex justify-content-center mt-5">
                <h1>Nenhum contato encontrado</h1>
            </div>
            
        }
    </main>
</div>